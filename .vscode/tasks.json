{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Main",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/source/main.cpp",
                "-o",
                "${workspaceFolder}/main",
                "-I",
                "${workspaceFolder}/headers/",
                "-ggdb",
                "${workspaceFolder}/source/headerDefinitions/*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}